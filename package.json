{
  "name": "battleship",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.12.1",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "./script/dev",
    "build": "pnpm --filter web build",
    "start": "pnpm --filter web start",
    "lint": "pnpm --filter web lint",
    "type-check": "pnpm --filter web type-check",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "./script/clean",
    "devkill": "./script/devkill",
    "convex:dev": "convex dev",
    "convex:deploy": "convex deploy",
    "pnpm-dev": "pnpm dev",
    "pnpm-install": "pnpm install",
    "pnpm-clean": "pnpm clean",
    "prepare": "husky"
  },
  "devDependencies": {
    "@edge-runtime/vm": "^5.0.0",
    "concurrently": "^8.2.2",
    "convex": "^1.31.6",
    "convex-test": "^0.0.41",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.10",
    "@statsig/react-bindings": "^3.31.2"
  },
  "lint-staged": {
    "apps/web/**/*.{ts,tsx}": "bash -c 'cd apps/web && pnpm lint'"
  }
}
